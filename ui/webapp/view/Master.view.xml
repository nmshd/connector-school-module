<mvc:View
    controllerName="eu.enmeshed.connectorui.controller.Master"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
>
    <f:DynamicPage
        id="masterPage"
        stickySubheaderProvider="iconTabBar"
        class="sapUiNoContentPadding"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title
                        text="{i18n>appTitle}"
                        level="H2"
                    />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <Table
                id="productsTable"
                inset="false"
                items="{
						path: 'studentModel>/students',
						sorter: {
							path: 'Name'
						}
					}"
                class="sapFDynamicPageAlignContent"
                width="auto"
                busyIndicatorDelay="0"
            >
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer />
                        <Button
                            icon="sap-icon://upload"
                            text="Schüler importieren"
                            press=".onOpenAddStudentsDialog"
                        />
                        <Button
                            text="Onboarding Dokument aller Schüler"
                            icon="sap-icon://pdf-attachment"
                            press=".downloadStudents"
                        />
                        <Button
                            text="Abmelden"
                            icon="sap-icon://log"
                            press=".logout"
                        />
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column>
                        <Text text="Schüler" />
                    </Column>
                    <Column>
                        <Text text="Status" />
                    </Column>
                    <Column>
                        <Text text="Aktionen pro Schüler" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Inactive">
                        <cells>
                            <ObjectIdentifier
                                title="{studentModel>givenname} {studentModel>surname}"
                                text="{studentModel>id}"
                            />
                            <Text text="{path:'studentModel>status',formatter:'.formatStatus'}" />
                            <HBox columnGap="0.25rem">

                                <Button
                                    icon="sap-icon://pdf-attachment"
                                    text="Onboarding Dokument"
                                    press=".onDownloadPdf" />
                                <Button
                                    icon="sap-icon://inspect"
                                    text="Log"
                                    press=".onStudentLog" />
                                <Button
                                    icon="sap-icon://delete"
                                    type="Reject"
                                    text="Schüler löschen"
                                    press=".onDeleteStudent"
                                />
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>