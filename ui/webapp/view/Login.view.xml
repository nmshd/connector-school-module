<mvc:View
    controllerName="eu.enmeshed.connectorui.controller.Login"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout.form"
    xmlns:u="sap.ui.unified"
>
    <Page>
        <content>
            <VBox
                fitContainer="true"
                justifyContent="Center"
                alignItems="Center"
                alignContent="Center"
            >
                <items>
                    <Title text="Login" />
                    <l:SimpleForm editable="true">
                        <Label text="API Key" />
                        <Input
                            id="apiKeyInput"
                            type="Password"
                            submit=".onLogin"
                            placeholder="API-Key"
                        />
                        <Label text="Config File" />
                        <u:FileUploader
                            id="configFileUploader"
                            name="myConfigFileUpload"
                            change=".onConfigFileChanged"
                            tooltip="Upload your csv entry"
                            width="100%"
                        />
                        <Label text="" />
                        <Button
                            width="12rem"
                            text="Login"
                            type="Emphasized"
                            press=".onLogin"
                        />
                    </l:SimpleForm>


                </items>
            </VBox>
        </content>
        <footer>
            <Bar>
                <contentLeft />
                <contentRight>
                    <Text text="myLogin" />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>