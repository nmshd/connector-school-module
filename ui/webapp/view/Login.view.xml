<mvc:View
    controllerName="eu.enmeshed.connectorui.controller.Login"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
>
    <Page>
        <content>
            <VBox
                fitContainer="true"
                justifyContent="Center"
                alignItems="Center"
                alignContent="Center"
            >
                <items>
                    <Title text="Login" />
                    <Input
                        id="apiKeyInput"
                        type="Password"
                        submit=".onLogin"
                        placeholder="API-Key"
                    />
                    <u:FileUploader
                        id="configFileUploader"
                        name="myConfigFileUpload"
                        change=".onConfigFileChanged"
                        tooltip="Upload your csv entry"
                    />
                    <Button
                        width="12rem"
                        text="Login"
                        type="Emphasized"
                        press=".onLogin"
                    />
                </items>
            </VBox>
        </content>
        <footer>
            <Bar>
                <contentLeft />
                <contentRight>
                    <Text text="myLogin" />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>