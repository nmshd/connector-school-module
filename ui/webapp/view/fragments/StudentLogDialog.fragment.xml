<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        id="studentLogDialog"
        title="Schüler Log"
        class="sapUiContentPadding"
        contentWidth="800px"
        resizable="true"
    >
        <content>
            <VBox>
                <Text text="Hier sieht man den Log eines einzelnen Schülers."
                    class="sapUiSmallMarginBottom" />
                <TextArea rows="20" width="100%" id="logOutput" value="{appView>/logOutput}"
                    editable="false" />
            </VBox>


        </content>
        <beginButton>
            <Button
                text="Schließen"
                press=".onCloseStudentLogDialog"
            />
        </beginButton>
        <endButton>
        </endButton>
    </Dialog>
</core:FragmentDefinition>